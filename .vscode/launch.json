{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "name": "ast-util spec",
            "args": [
                "inferTypeSpec"
            ],
            "runtimeArgs": [
                "--inspect",
                "--debug-brk",
            ],
            "cwd": "${workspaceFolder}/typescript-ast-util/",
            "program": "${workspaceFolder}/typescript-ast-util/dist/spec/index.js",
            "sourceMaps": true
        },

        {
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "name": "typescript-api-tests",
            "args": [
                "--config=spec/support/jasmine-js.json",
                "**/codeGenSpec.js"
            ],
            "runtimeArgs": [
                "--inspect",
                "--debug-brk",
            ],
            "cwd": "${workspaceFolder}/typescript-api-tests/",
            "program": "${workspaceFolder}/typescript-api-tests/node_modules/jasmine/bin/jasmine.js",
            "sourceMaps": true
        }
    ]
}